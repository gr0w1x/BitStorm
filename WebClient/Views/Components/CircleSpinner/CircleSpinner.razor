@using Microsoft.AspNetCore.Components

<div class="spinner" style="width: @(Size); height: @(Size)">
    @for (int i = 0; i < Count; i++)
    {
        double angle = 2 * Math.PI / Count * i;
        int sin = (int)(50 + 40 * Math.Sin(angle));
        int cos = (int)(50 + 40 * Math.Cos(angle));
        <div style="animation-delay: @((int)(i * 1000f / Count))ms; top: @(sin)%; left: @(cos)%; background-color: @Color" />
    }
</div>

@code {
    private int _count = 12;
    [Parameter]
    public int Count { get => _count; set => _count = value; }

    private string _size = "25px";
    [Parameter]
    public string Size { get => _size; set => _size = value; }

    private string _color = "var(--background)";
    [Parameter]
    public string Color { get => _color; set => _color = value; }
}
